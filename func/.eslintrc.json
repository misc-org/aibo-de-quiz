{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "prettier", "./node_modules/gts/"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["func/tsconfig.json"]
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "@typescript-eslint/no-floating-promises": "error"
      },
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ]
}
